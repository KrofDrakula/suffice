{
  "name": "interpreter",
  "private": true,
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.umd.cjs",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "ci-test": "vitest --run",
    "ci-lint": "tsc --noEmit",
    "build-grammar": "peggy -o src/grammar/index.js --format es src/grammar/main.pegjs",
    "test-grammar": "pnpm build-grammar && pnpm test -- --run"
  },
  "devDependencies": {
    "peggy": "^3.0.2",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^2.1.0",
    "vitest": "^0.29.7"
  }
}
